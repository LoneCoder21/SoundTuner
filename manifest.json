{
    "manifest_version": 2,
    "name": "SoundTuner",
    "version": "1.0",

    "description": "Extension to manipulate background sounds.",
    "homepage_url": "https://github.com/LoneCoder21/SoundTuner",
    "browser_specific_settings": {
        "gecko": {
            "id": "abhinavneelam949@gmail.com"
        }
    },
    "icons": {
        "48": "icon.png",
        "96": "icon.png"
    },
    "action": {
        "default_icon": "icon.png",
        "default_title": "SoundTuner",
        "default_popup": "popup.html"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "SoundTuner",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "all_frames": true,
            "match_about_blank": true,
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "webNavigation",
        "storage",
        "unlimitedStorage",
        "notifications",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "host_permissions": ["<all_urls>"]
}
